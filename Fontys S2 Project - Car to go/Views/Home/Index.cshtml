@{
    ViewData["Title"] = "Home Page";
}
@if (TempData["Update"] != null)
{
    <strong class="alert alert-warning">@TempData["Update"]</strong>
    <br />
    <br />
}
@if (TempData["Delete"] != null)
{
    <strong class="alert alert-danger">@TempData["Delete"]</strong>
    <br />
    <br />
}
@if (TempData["LoggedIn"] != null)
{
    <strong class="alert alert-success">@TempData["LoggedIn"]</strong>
    <br />
    <br />
}


<div class="text-center">
    <h2 class="display-4 pt-3">Welcome</h2>
    <p>Search, Rent and got a Car to Go!</p>
</div>

<div class="card-deck text-center">
    <div class="card shadow" style="width:inherit">

        <a href='@Url.Action("CarIndex", "Vehicle")'>
            <img class="card-img" style="height:inherit;" src="https://cdn.discordapp.com/attachments/754679426339569788/754681048776048750/17VwTRo5DrYelFR1_350.png" alt="Cardphoto">
        </a>
        <div class="card-body">
            <a class="h4 justify-content-center alert-link" asp-area="" asp-controller="Vehicle" asp-action="CarIndex">ALL CARS!</a>
            <p class="card-text">For carying persons around!</p>
        </div>

    </div>

    <div class="card shadow" style="width:inherit;">
        <a href='@Url.Action("VanIndex", "Vehicle")'>
            <img class="card-img-top" style="height: auto;" src="https://cdn.discordapp.com/attachments/754679426339569788/754963447841816606/sprinter-van.png" alt="Card image">
        </a>
        <div class="card-body">
            <a class="h4 justify-content-center alert-link" asp-area="" asp-controller="Vehicle" asp-action="VanIndex">ALL VANS!</a>
            <p class="card-text">For large cargo spaces!</p>
        </div>
    </div>

    <div class="card shadow" style="width:inherit;">
        <a href='@Url.Action("SpecialVehicleIndex", "Vehicle")'>
            <img class="card-img-top" style="height: auto;" src="https://cdn.discordapp.com/attachments/754679426339569788/762635934637883402/z17-gen-2-compact-excavator5a6af57c98c74f2a0d0beb27.png" alt="Card image">
        </a>
        <div class="card-body">
            <a class="h4 justify-content-center alert-link" asp-area="" asp-controller="Vehicle" asp-action="SpecialVehicleIndex">ALL SPECIAL VEHICLES!</a>
            <p class="card-text">For the heavy work!</p>
        </div>
    </div>
</div>

