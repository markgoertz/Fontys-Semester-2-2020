@model Fontys_S2_Project___Car_to_go.Models.UserViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="@Model.ID" class="form-control" type="hidden" readonly  />
                <span asp-validation-for="@Model.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Firstname" class="control-label"></label>
                <input asp-for="@Model.Firstname" class="form-control" />
                <span asp-validation-for="@Model.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Lastname" class="control-label"></label>
                <input asp-for="@Model.Lastname" class="form-control" />
                <span asp-validation-for="@Model.Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label disabled"></label>
                <input asp-for="@Model.Email" class="form-control disabled" readonly />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Adres" class="control-label"></label>
                <input asp-for="@Model.Adres" class="form-control" />
                <span asp-validation-for="@Model.Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Postalcode" class="control-label"></label>
                <input asp-for="@Model.Postalcode" class="form-control" />
                <span asp-validation-for="@Model.Postalcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Housenumber" class="control-label"></label>
                <input asp-for="@Model.Housenumber" class="form-control" />
                <span asp-validation-for="@Model.Housenumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Role" class="form-control" type="hidden"/>
                <span asp-validation-for="@Model.Role" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-sm btn-warning btn-outline-dark input text-center" type="submit" asp-controller="User" asp-action="Update">Update User!</button>
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn btn-sm btn-warning btn-outline-dark input text-center">@Html.ActionLink("Delete", "Delete", new { ID = Model.ID }, new { onclick = "return confirm('Are sure wants to delete?');" })</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
