@model Fontys_S2_Project___Car_to_go.Models.UserViewModel


<h2 class="text-center pt-3">Register now!</h2>

<div class="row pt-3">
    <div class="col-md-2">

    </div>

    <div class="col-md-8 text-center p-5">
        @if (TempData["DoubleEmails"] != null)
        {
            <strong class="alert alert-danger alert-dismissible">@TempData["DoubleEmails"]</strong>
        }
        <div class="card p-5 pt-3 shadow border-secondary">
            <form asp-action="View">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="Firstname" class="control-label col-sm-3 pt-2"></label>
                    <div class="col-sm-9">
                        <input asp-for="Firstname" class="form-control border-secondary" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Lastname" class="control-label col-sm-3 pt-2"></label>
                    <div class="col-sm-9">
                        <input asp-for="Lastname" class="form-control border-secondary" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Email" class="control-label col-sm-3 pt-2"></label>
                    <div class="col-sm-9">
                        <input asp-for="Email" class="form-control border-secondary" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Adres" class="control-label col-sm-3 pt-2"></label>
                    <div class="col-sm-9">
                        <input asp-for="Adres" class="form-control border-secondary" />
                        <span asp-validation-for="Adres" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Postalcode" class="control-label col-sm-3 pt-2"></label>
                    <div class="col-sm-9">
                        <input asp-for="Postalcode" class="form-control border-secondary" />
                        <span asp-validation-for="Postalcode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Housenumber" class="control-label col-sm-3 pt-2"></label>
                    <div class="col-sm-9">
                        <input asp-for="Housenumber" class="form-control border-secondary" />
                        <span asp-validation-for="Housenumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row d-none">
                    <label asp-for="Role" class="control-label col-sm-3 pt-2 hidden"></label>
                    <div class="col-sm-9">
                        <input asp-for="Role" value="User" class="form-control border-secondary" />
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="control-label col-sm-3 pt-2"></label>
                    <div class="col-sm-9">
                        <input asp-for="Password" class="form-control border-secondary" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-success btn-outline-dark input text-center" type="submit" asp-controller="User" asp-action="CreateAccount">Add new Account!</button>
                </div>
            </form>
            </div>
        </div>

        <div class="col-md-2">

        </div>
    </div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
