@model IEnumerable<Fontys_S2_Project___Car_to_go.Models.VehicleViewModel>
@{
    ViewData["Title"] = "Details";

}

@foreach (var car in Model)
{
    <div class="card shadow">
        <h2 class="font-weight-bold p-2 pb-5 text-center">@car.Brandname | @car.Modelname</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="col">
                    <img class="img-fluid m-auto" style="width:inherit; height:inherit" src="@car.ImageLink"/>
                </div>

                <div class="col">
                    <h5 class="font-weight-bold text-center pt-5">Rental price per day €@car.RentalPrice</h5>
                </div>

            </div>

            <div class="col-md-6">

                <div class="col bg-primary border-white text-white shadow">

                    <h4 class="font-weight-bold text-center text-white p-1">Technical Information</h4>

                    <p class="card-text font-weight-bold pt-4">Power = @car.Enginepower HP</p>
                    <p class="card-text font-weight-bold">Transmission: @car.Transmission</p>
                    <p class="card-text font-weight-bold">Acceleration 0-100km/h in @car.Acceleration seconds</p>
                    <p class="card-text font-weight-bold">Fueltype = @car.Fueltype</p>

                </div>

                <div class="col border-white shadow">

                    <h5 class="font-weight-bold text-center p-1">Capacities Information</h5>

                    <p class="card-text font-weight-bold pt-4">Amount of seats: @car.Seat</p>
                    <p class="card-text font-weight-bold pb-3">Cargospace = @car.Cargospace L</p>

                </div>
                <div class="row">
                    <div class="col-md-3">

                    </div>
                        <div class="col-md-6">
                            <form asp-controller="Reservation" asp-action="PlaceReservation" method="get">
                                <input type="hidden" name="Id" value="@car.ID" />
                                <button type="submit" class="btn btn-primary btn-lg h3">Make a Reservation!</button>
                            </form>
                        </div>
                    <div class="col-md-3">

                    </div>
                </div>
            </div>

        </div>
    </div>
}





























